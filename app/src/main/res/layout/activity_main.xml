<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:id="@+id/gridLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/type_text_view"
        android:id="@+id/typeTextView"
        android:layout_row="0"
        android:layout_column="1" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/convertTypeQualifierSpinner"
        android:layout_column="2"
        android:layout_weight="1"
        android:entries="@array/measurement_types"
        android:layout_row="1"
        android:background="#C0C0C0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/value_text_view"
        android:id="@+id/valueTextView"
        android:layout_row="2"
        android:layout_column="1" />

    <EditText
        android:layout_width="252dp"
        android:layout_height="wrap_content"
        android:id="@+id/inputValueEditText"
        android:layout_column="2"
        android:layout_weight="1"
        android:focusable="true"
        android:text="@string/value_edit_text"
        android:textSize="14dp"
        android:inputType="number"
        android:focusableInTouchMode="true"
        android:layout_row="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from_text_view"
        android:id="@+id/fromTextView"
        android:layout_row="4"
        android:layout_column="1" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/convertFromQualifierSpinner"
        android:layout_column="2"
        android:layout_weight="1"
        android:layout_row="4"
        android:background="#808080"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to_text_view"
        android:id="@+id/toTextView"
        android:layout_row="5"
        android:layout_column="1" />

    <Spinner
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:id="@+id/convertToQualifierSpinner"
        android:layout_column="2"
        android:layout_weight="1"
        android:layout_row="5"
        android:background="#C0C0C0"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_text_view"
        android:id="@+id/resultTextView"
        android:layout_row="6"
        android:layout_column="1" />

    <TextView
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result_value_edit_text"
        android:id="@+id/resultValueTextView"
        android:textSize="50dp"
        android:textAlignment="center"
        android:layout_row="7"
        android:layout_column="2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:text="Convert!"
        android:id="@+id/convertButton"
        android:layout_column="2"
        android:layout_row="8"
        android:background="#ADD8E6"
        android:paddingRight="50dp" />

</GridLayout>
