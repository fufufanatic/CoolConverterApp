<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result_text_view"
        android:textColor="#FF0000"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="290dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/result_value_text_view"
        android:id="@+id/resultValueTextView"
        android:textSize="75dp"
        android:textColor="#080808"
        android:layout_gravity="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/typeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_text_view"
            android:textColor="#FF0000"/>

        <Spinner
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:id="@+id/convertTypeQualifierSpinner"
            android:layout_column="2"
            android:layout_weight="1"
            android:entries="@array/measurement_types"
            android:layout_row="1"
            android:background="#cc4e5d" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from_text_view"
            android:id="@+id/fromTextView"
            android:textColor="#FF0000"/>

        <Spinner
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:id="@+id/convertFromQualifierSpinner"
            android:layout_weight="1"
            android:background="#00d9ff" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to_text_view"
            android:id="@+id/toTextView"
            android:textColor="#FF0000"/>

        <Spinner
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:id="@+id/convertToQualifierSpinner"
            android:layout_weight="1"
            android:background="#f16b3e"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/value_text_view"
            android:id="@+id/valueTextView"
            android:textColor="#FF0000"/>

        <EditText
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:id="@+id/inputValueEditText"
            android:layout_weight="1"
            android:focusable="true"
            android:inputType="number"
            android:focusableInTouchMode="true"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="82dp"
        android:text="@string/convert_button_text_view"
        android:textColor="#FFFFFF"
        android:id="@+id/convertButton"
        android:background="#000000" />

</LinearLayout>